<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1>Create a New Listing</h1>
    <form
      method="POST"
      action="/listings"
      class="needs-validation"
      enctype="multipart/form-data"
      novalidate
    >
      <div class="mp-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mp-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">plese enter a short description</div>
      </div>
      <!-- <div class="mp-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          name="listing[image]"
          placeholder="Enter image URL/Link"
          class="form-control"
          type="text"
        />
      </div> -->
      <div class="mp-3">
        <label for="image" class="form-label">upload Listing image</label>
        <input name="listing[image]" class="form-control" type="file" />
      </div>
      <div class="row">
        <div class="mp-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            required
          />
          <div class="invalid-feedback">please enter valid price</div>
        </div>
        <div class="mp-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            please enter the valid country name
          </div>
        </div>
      </div>
      <div class="mp-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Bhopal"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">plese enter the valid location</div>
      </div>
      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
